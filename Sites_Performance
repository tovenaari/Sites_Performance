def read_api_key(path="semrush_api_key.txt"):
    # Lista di encoding da provare
    encodings = ['utf-8-sig', 'utf-16', 'ascii', 'latin1']
    
    for encoding in encodings:
        try:
            with open(path, "r", encoding=encoding) as f:
                key = f.read().strip()
                
            # Validate the key format
            if not key or len(key) < 10 or '%' in key:
                continue
                
            print(f"âœ… API key letta correttamente con encoding {encoding}")
            print(f"ðŸ”‘ Chiave: {key[:5]}...{key[-5:]}")
            return key
            
        except UnicodeDecodeError:
            continue
        except Exception as e:
            print(f"âŒ Errore nella lettura dell'API key: {str(e)}")
            return None
    
    print("âŒ Non Ã¨ stato possibile leggere l'API key con nessun encoding supportato")
    return None

